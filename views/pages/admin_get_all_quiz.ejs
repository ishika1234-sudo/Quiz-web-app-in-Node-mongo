<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  </head>

  <header>
    <%- include('../partials/header'); %>
  </header>

  <body>
    <% for(var i=0; i < quizzes.length; i++) { %>
    
        <div class="card text-left" style="margin-top:3%;background-color: #a9c2f3;margin-bottom: 1%;margin-left: 10%;margin-right: 10%;">
        
        <div class="card-body" >
          <h5 class="card-title"><b>Question:</b> <%= quizzes[i].Question %></h5>
          <li><%= quizzes[i].Options.option1 %></li>
          <li><%= quizzes[i].Options.option2 %></li>
          <li><%= quizzes[i].Options.option3 %></li>
          <li><%= quizzes[i].Options.option4 %></li>
          <p class="card-text"><b>Answer:</b> <%= quizzes[i].Answer %></p>
          <p class="card-text"><b>Question Id:</b> <%= quizzes[i].Question_id %></p>
          <p class="card-text"><b>Genre:</b> <%= quizzes[i].QuestionGenre %></p>
          
        </div>
        <div class="card-header" style="background-color: #cad7f1;">
            <ul class="nav nav-pills card-header-pills">
              <li class="nav-item">              
                <a class="nav-link " href="/update/<%= quizzes[i].Question_id %>"><b>Update</b></a>
              </li>
              <li class="nav-item">
                <a class="nav-link " href="/delete/<%= quizzes[i].Question_id %>"><b>Delete</b></a>
              </li>
            </ul>
          </div>
    </div>
    <% } %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

  </body>
</html>
