<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  </head>

  <header>
    <%- include('../partials/header'); %>
  </header>
  <body>
    <h4 style="text-align: center;margin-top: 1%;">Admin page to Update questions</h4>
    <div class="container" style="background-color: #80aaff; padding-bottom: 0.5%;">
        <form class="row g-3" action="/update" method="POST" style="margin:3%">
            <% for(var i=0; i < quizzes.length; i++) { %>
                <div class="col-md-6">
                    <label class="form-label">You are editing for Question ID:</label>
                    <input type="text" class="form-control" id="QuestionID" name="old_Question_id" value="<%= quizzes[i].Question_id %>" readonly>
                </div>
                <div class="col-md-6">
                <label class="form-label">Question ID</label>
                <input type="text" class="form-control" id="QuestionID" name="Question_id" value="<%= quizzes[i].Question_id %>">
                </div>
                <div class="col-md-6">
                <label class="form-label">Question</label>
                <input type="text" class="form-control" id="question" name="question" value="<%= quizzes[i].Question %>">
                </div>
                
                <div class="col-md-6">
                <label class="form-label">option 1</label>
                <input type="text" class="form-control" id="option1" name="option1" value="<%= quizzes[i].Options.option1 %>">
                </div>
                <div class="col-md-6">
                    <label class="form-label">option 2</label>
                    <input type="text" class="form-control" id="option2" name="option2" value="<%= quizzes[i].Options.option2 %>">
                </div>
                <div class="col-md-6">
                    <label  class="form-label">option 3</label>
                    <input type="text" class="form-control" id="option3" name="option3" value="<%= quizzes[i].Options.option3 %>">
                </div>
                <div class="col-md-6">
                    <label class="form-label">option 4</label>
                    <input type="text" class="form-control" id="option4" name="option4" value="<%= quizzes[i].Options.option4 %>">
                </div>

                <div class="col-md-6">
                    <label class="form-label">Answer</label>
                    <input type="text" class="form-control" id="Answer" name="Answer" value="<%= quizzes[i].Answer %>">
                </div>
                <div class="col-md-6">
                    <label class="form-label">Genre</label>
                    <input type="text" class="form-control" id="genre" name="QuestionGenre" value="<%= quizzes[i].QuestionGenre %>">
                </div>
                <div class="col-12">
                <button type="submit" class="btn btn-primary">submit</button>
                </div>
                <% } %>
        </form>
    </div>


     
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

  </body>
</html>
